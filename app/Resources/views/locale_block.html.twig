{% set locale = app.session.get('_locale') %}
{% for language in languages %}
    {% if language.code == locale %}
        <li><a href="#"><strong>{{ language.code }}</strong></a></li>
    {% else %}
        <li><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge ({'_locale': language.code | lower})) }}">{{ language.code }}</a></li>
    {%  endif %}
{% endfor %}